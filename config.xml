       <gap:splash src="splash/android/portrait/hdpi.png" gap:platform="android" gap:density="hdpi" />
       <gap:splash src="splash/android/portrait/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
       <icon src="images/Skiradius.png" gap:platform="android" gap:density="ldpi" />
        <icon src="images/Skiradius.png" gap:platform="android" gap:density="mdpi" />
        <icon src="images/Skiradius.png" gap:platform="android" gap:density="hdpi" />
