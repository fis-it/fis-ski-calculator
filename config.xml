<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.fis-ski.skicalculator" 
        version="1.0.0" 
        versioncode="10">
    <name>Ski Radius Calculator</name>
    <Description>Help you to calculate the radius ski with the new FIS rules for season 2012/2013 </Description>
    <author href="http://www.fis-ski.com">
        FIS IT department
    </author>
        <preference name="phonegap-version" value="3.1.0" />
